<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeDetail"
    tools:showIn="@layout/app_bar_homedetail">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_menudetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sortBt"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

   <Button
        android:id="@+id/sortBt"
        android:onClick="onClickSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Urutkan Makanan"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>